<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350sp"
    android:layout_height="500sp"
    android:background="@drawable/rectangular_rounded_shape"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondary"
        android:text="@string/txt_inconnu"
        android:fontFamily="@font/amatica_sc_bold"
        android:textSize="60sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="380dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btn_ouvrir"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/bordure"
        android:drawableTop="@drawable/ic_arrow_up"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="120dp"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/bordure"
        android:drawableTop="@drawable/ic_arrow_stop"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btn_fermer"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/bordure"
        android:drawableTop="@drawable/ic_arrow_down"
        android:paddingTop="20dp"
        android:fontFamily="@font/marvel_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="320dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>