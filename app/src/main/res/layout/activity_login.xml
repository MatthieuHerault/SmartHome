<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_background_2"
    app:layout_constraintStart_toEndOf="parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/launch_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/launch_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="230sp"
        android:contentDescription="@string/img_launch_icon" />

    <EditText
        android:id="@+id/txt_mdp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="@string/txt_mdp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/marvel_bold"
        android:drawableStart="@drawable/ic_lock_outline_"
        android:drawablePadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_connexion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:fontFamily="@font/marvel_bold"
        android:background="@drawable/ic_send"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginStart="210dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>